@model persontracker.Models.Expense

<h2>Are you sure you want to delete this expense?</h2>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Amount:</strong> @Model.Amount</p>
<p><strong>Category:</strong> @Model.Catagory</p>
<p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/Expenses" class="btn btn-secondary">Cancel</a>
</form>
